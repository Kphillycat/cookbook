<div class="all-recipes" ng-controller="RecipeListCtrl">
<h1>Listing recipes</h1>

  <label>Name:</label>
  <input id="search" type="text" ng-model="query" />

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Prep instructions</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody class="recipes">
    <tr ng-repeat="recipe in recipes | filter:query | orderBy:orderProp" class="recipe">
      <td>{{recipe.name}}</td>
      <td>{{recipe.description}}</td>
      <td>{{recipe.prep_instructions}}</td>
      <td ng-click="showRecipe(recipe.id)"><a href="#">Click for Details</a></td>
  </tbody>
</table>

<div class="hidden" recipe-view="" id="recipe">

  <label for="serving-scale">Scale up</label>
  <input id="serving-scale" ng-model="scale" type="number" min="1" max="10" step="0.5" value="1" /> 

  <p>
    <strong>Name:</strong>
    {{currentRecipe.name}}
  </p>

  <p>
    <strong>Description:</strong>
    {{currentRecipe.description}}
  </p>

  <p>
    <strong>Prep instructions:</strong>
    {{currentRecipe.prep_instructions}}
  </p>

  <ul class="ingredients">
    <li ng-repeat="ingredient in currentRecipe.ingredients">
      <p>{{ingredient.quantity * (scale || 1)}} {{ingredient.unit}} of {{ingredient.name}}</p>
    </li>
  </ul>

</div>

<br>
</div>
<%= link_to 'New Recipe', new_recipe_path %>
